<nav class="bg-red-500 p-4 text-white flex justify-between items-center">
  <div class="flex items-center gap-4">
    <img src="/images/logo.png" alt="Signal Shala" class="h-10" />

    <% if (currentPage === "headHome" || currentPage === "coordinatorReport") { %>
      <a href="/head/headHome" class="px-4 py-2 hover:bg-red-600 rounded-md"><%= __('home') %></a>
      <a href="/head/deleteCoordinator" class="px-4 py-2 hover:bg-red-600 rounded-md"><%= __('delete_coordinator') %></a>
      <a href="/head/addCoordinator" class="px-4 py-2 hover:bg-red-600 rounded-md"><%= __('add_coordinator') %></a>
    <% } else { %>
      <a href="/coordinator/coordHome" class="px-4 py-2 hover:bg-red-600 rounded-md"><%= __('home') %></a>
      <a href="/coordinator/deleteTeacher" class="px-4 py-2 hover:bg-red-600 rounded-md"><%= __('delete_teacher') %></a>
      <a href="/coordinator/addTeacher" class="px-4 py-2 hover:bg-red-600 rounded-md"><%= __('add_teacher') %></a>

