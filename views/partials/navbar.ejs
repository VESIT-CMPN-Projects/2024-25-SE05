<nav class="bg-red-500 px-4 py-2 sm:py-4 text-white">
  <div class="max-w-7xl mx-auto flex items-center justify-between flex-wrap">
    <!-- LEFT: Logo + Links (Desktop only) -->
    <div class="flex items-center gap-6 flex-1">
      <!-- Logo -->
      <img src="/images/logo2.jpg" alt="Signal Shala" class="h-8 sm:h-10" />

      <!-- Desktop Nav Links -->
      <div class="hidden md:flex gap-3 sm:gap-4">
        <% if (currentPage === "headHome" || currentPage === "coordinatorReport"
        || currentPage === "HeadLectureDetails") { %>
        <a
          href="/head/headHome"
          class="px-3 py-1 sm:px-4 sm:py-2 hover:bg-red-600 rounded-md"
          >Home</a
        >
        <a
          href="/head/addCoordinator"
          class="px-3 py-1 sm:px-4 sm:py-2 hover:bg-red-600 rounded-md"
          >Add Coordinator</a
        >
        <% if (currentPage === "coordinatorReport") { %>
        <button
          onclick="confirmDeleteCoord('<%= currCoord._id %>')"
          class="px-3 py-1 sm:px-4 sm:py-2 hover:bg-red-600 rounded-md"
        >
          Delete Coordinator
        </button>
        <% } %> <% } else { %>
        <a
          href="/coordinator/coordHome"
          class="px-3 py-1 sm:px-4 sm:py-2 hover:bg-red-600 rounded-md"
          >Home</a
        >
        <a
          href="/coordinator/addTeacher"
          class="px-3 py-1 sm:px-4 sm:py-2 hover:bg-red-600 rounded-md"
          >Add Teacher</a
        >
        <a
          href="/coordinator/report"
          class="px-3 py-1 sm:px-4 sm:py-2 hover:bg-red-600 rounded-md"
          >Report</a
        >
        <% if (currentPage === "teacherDetails") { %>
        <button
          onclick="confirmDeleteTeacher('<%= teacher._id %>')"
          class="px-3 py-1 sm:px-4 sm:py-2 hover:bg-red-600 rounded-md"
        >
          Delete Teacher
        </button>
        <a
          href="/coordinator/assign/<%= teacher._id %>"
          class="px-3 py-1 sm:px-4 sm:py-2 hover:bg-red-600 rounded-md"
          >Assign Teacher</a
        >
        <% } %> <% } %>
      </div>
    </div>

    <!-- RIGHT: Profile (desktop) + Hamburger (mobile) -->
    <div class="flex items-center gap-3">
      <!-- Desktop Profile & Logout -->
      <div class="hidden md:flex items-center gap-4">
        <a href="/" class="px-3 py-1 bg-red-700 rounded-md hover:bg-red-800"
          >Change Login</a
        >
        <img
          src="<%= currUser.picture.path %>"
          alt="Profile"
          class="w-10 h-10 rounded-full border border-white"
        />
      </div>

      <!-- Mobile Hamburger -->
      <div class="md:hidden">
        <button onclick="toggleMenu()" class="focus:outline-none">
          <svg
            class="h-6 w-6 text-white"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- ✅ MOBILE MENU: With Profile Picture & Centered Logout -->
    <div
      id="mobileMenu"
      class="hidden md:hidden w-full mt-2 flex flex-col gap-1 sm:gap-2 items-start"
    >
      <% if (currentPage === "headHome" || currentPage === "coordinatorReport"
      || currentPage === "HeadLectureDetails") { %>
      <a href="/head/headHome" class="px-3 py-1 hover:bg-red-600 rounded-md"
        >Home</a
      >
      <a
        href="/head/addCoordinator"
        class="px-3 py-1 hover:bg-red-600 rounded-md"
        >Add Coordinator</a
      >
      <% if (currentPage === "coordinatorReport") { %>
      <button
        onclick="confirmDeleteCoord('<%= currCoord._id %>')"
        class="px-3 py-1 hover:bg-red-600 rounded-md w-full text-left"
      >
        Delete Coordinator
      </button>
      <% } %> <% } else { %>
      <a
        href="/coordinator/coordHome"
        class="px-3 py-1 hover:bg-red-600 rounded-md"
        >Home</a
      >
      <a
        href="/coordinator/addTeacher"
        class="px-3 py-1 hover:bg-red-600 rounded-md"
        >Add Teacher</a
      >
      <a
        href="/coordinator/report"
        class="px-3 py-1 hover:bg-red-600 rounded-md"
        >Report</a
      >
      <% if (currentPage === "teacherDetails") { %>
      <button
        onclick="confirmDeleteTeacher('<%= teacher._id %>')"
        class="px-3 py-1 hover:bg-red-600 rounded-md w-full text-left"
      >
        Delete Teacher
      </button>
      <a
        href="/coordinator/assign/<%= teacher._id %>"
        class="px-3 py-1 hover:bg-red-600 rounded-md"
        >Assign Teacher</a
      >
      <% } %> <% } %>

      <!-- ✅ Profile Picture (Mobile) -->
      <div class="w-full flex justify-center mt-3">
        <img
          src="<%= currUser.picture.path %>"
          alt="Profile Picture"
          class="w-12 h-12 rounded-full border border-white"
        />
      </div>

      <!-- ✅ Centered Change Login -->
      <div class="w-full flex justify-center">
        <a
          href="/"
          class="px-4 py-2 mt-1 bg-red-700 rounded-md hover:bg-red-800 text-white text-center"
        >
          Change Login
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  function toggleMenu() {
    const menu = document.getElementById("mobileMenu");
    menu.classList.toggle("hidden");
  }

  function confirmDeleteTeacher(teacherId) {
    if (window.confirm("Are you sure you want to delete this teacher?")) {
      window.location.href = `/coordinator/delete/${teacherId}`;
    }
  }

  function confirmDeleteCoord(coordId) {
    if (window.confirm("Are you sure you want to delete this Coordinator?")) {
      window.location.href = `/head/delete/${coordId}`;
    }
  }
</script>
